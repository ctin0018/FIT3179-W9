{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2020 Global Electricity Accessibility per Country Population",
    "width": 800,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/ctin0018/FIT3179-W9/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {"url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "#b9d8f6"}
      },
      {
        "data": {"url": "https://raw.githubusercontent.com/ctin0018/FIT3179-W9/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "#bdbcbc"}
      },
      
      {
        "transform": [
          {"calculate": "'Data is unavailable for ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {"field": "note"}
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME", 
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/ctin0018/FIT3179-W9/main/data/Access_to_electric_%25_dataset.csv" 
              },
              "key": "Entity",
              "fields": ["Access to electricity (% of population)"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "#e5e5e5"},
        "encoding": {
          "color": {
            "field": "Access to electricity (% of population)",
            "type": "quantitative",
            "scale": {
              "type": "linear", 
              "domain": [100, 0],
              "scheme": "viridis"
            },
            "legend": {
                "orient": "bottom",
                "labelLimit": 50
            },
            "title": "Electricity Access (% population)"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Access to electricity (% of population)", "type": "quantitative", "title": "Access to electricity (%)"}
          ]
        }
      }
    ]
  }